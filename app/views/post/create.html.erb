<!-- Create new post -->

<%= form_for( @post, :url => {:action => :create_post, :controller => :post} ) do |f| %>
<div class="row">
<div class="col-md-6 col-md-offset-3">

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', class: "btn btn-primary" %>
  </div>

</div>
</div>

<% end %>